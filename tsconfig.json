{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",               // Module system
      "moduleResolution": "node",         // Module resolution strategy
      "esModuleInterop": true,             // Allow default imports from modules with no default export
      "baseUrl": ".",
      "strict": false,
      "paths": {
        "@/*": ["src/*"],
        "components/*": ["src/components/*"],
        "assets/*": ["src/assets/*"],
        "styles/*": ["src/scss/*"],
      }
    },
  
    "exclude": [
      "./node_modules",
    ],
  
    "include": [
      "./@types/*.d.ts",
      "./src/**/*.ts",
      "./src/**/*.vue",
    ],
  }